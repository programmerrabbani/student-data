<div class="container student-table my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <a href="/student/create" class="btn btn-primary btn-sm">Add New Students</a>
            <br>
            <br>

            <div class="card shadow">
                <div class="card-header">
                    <h2>All Students</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped soro-data-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Cell</th>
                                <th>Location</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% students.forEach((student , index) => { %>

                                <tr class="align-middle">
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>

                                        <% if (student.photo == "avater.png") { %>

                                            <img src="/img/<%= student.photo %>" alt="">
                                            <% } else { %>
                                                <img src="/img/students/<%= student.photo %>" alt="">
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= student.name %>
                                    </td>
                                    <td>
                                        <%= student.email %>
                                    </td>
                                    <td>
                                        <%= student.cell %>
                                    </td>
                                    <td>
                                        <%= student.location %>i</td>
                                    <td>
                                        <a href="/student/<%= student.id %>" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>

                                        <a href="/student/edit/<%= student.id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>

                                        <a href="/student/delete/<%= student.id %>" class="btn btn-danger btn-sm delete-btn"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>

                                <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>